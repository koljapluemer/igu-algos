{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "types": ["vitest/globals", "node"],
    "lib": ["ES2017", "DOM"],
    "target": "ES2017"
  },
  "include": ["src", "tsup.config.ts", "vitest.config.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
